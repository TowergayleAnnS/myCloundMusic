/* pages/musiclist/musiclist.wxss */
.musicList_container{
  height: 100vh;
  width: 100vw;
  position: relative;
}

.mylist{
  width: 100vw;
  display: flex;
  flex-direction: column;
}
.mylist_item{
  width: 100vw;
  display: flex;
  justify-content: space-between;
}
.mylist_left{
  width: 15vw;
}
.mylist_left>image{
  width: 15vw;
  height: 15vw;
}
.mylist_right{
  width: 75vw;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.showBox{
  display: flex;
  flex-direction: row-reverse;
  
}
.addMusicList{
  padding: 20rpx 0;
  width: 90vw;
  /* height: 100rpx; */
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 25rpx;
  color: black;
  /* line-height: 100rpx; */
  border-bottom: 2rpx solid lightgray;
  border-top: 2rpx solid lightgray;
  margin-bottom: 10rpx;
}
.createBtn{
  height: 45rpx;
  width: 45rpx;
}
.createBtn>image{
  height: 45rpx;
  width: 45rpx;
}
.createBox{
  
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  /* align-items: center; */
}
.nameInput{
  height: 100rpx;
  border-bottom: 1px solid lightgrey;
  line-height: 80rpx;
  font-size: 35rpx;
  margin: 20rpx 0 ;
}
.priveSelect{
  display: flex;
  justify-content: space-between;
  align-items: center;

}
.outsideH{
  margin: 40rpx 0 ;
  height: 100rpx;
  position: relative;
}
.handleBtnGroup{
  bottom: 0;
  right: 0rpx;
  position: absolute;
  /* display: flex;
  justify-content: start; */
}
.handleBtnGroup>button{
  display: inline-block;
  width: 20vw;
}